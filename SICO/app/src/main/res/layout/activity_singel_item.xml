<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    tools:context=".UI.Singel_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
         android:layout_width="match_parent"
         android:layout_height="211dp"
         android:src="@mipmap/ic_launcher_round"
         android:id="@+id/circilimage_contextfrind"
            android:layout_marginBottom="9dp"
         />

        <TextView
            android:fontFamily="casual"
            android:id="@+id/text_id_singelitem"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="id "
            android:textColor="#000"
            android:layout_width="match_parent"
            android:textSize="23sp"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/text_name_singelitem"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="name "
            android:textColor="#000"
            android:layout_width="match_parent"
            android:textSize="23sp"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="serif-monospace"
            android:id="@+id/text_price_singelitem"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="price "
            android:textColor="#000"
            android:layout_width="match_parent"
            android:textSize="23sp"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content" />


        <Button
            android:layout_marginTop="33dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/busin"
            android:id="@+id/bu_buy_singelitem"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="buy "
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content" />


    </LinearLayout>



</ScrollView>